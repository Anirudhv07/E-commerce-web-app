<main class="main">
    <div class="page-header breadcrumb-wrap">
        <div class="container">
            <div class="breadcrumb">
                <a href="/" rel="nofollow">Home</a>
                
                <span></span> <a href="/shop" rel="nofollow">Shop</a>
                
                <span></span> Your Cart
            </div>
        </div>
    </div>
    <section >
        
        <div class="container">
            <div class="row">
                <%if(count==0){%>
                    <div class="text-center " style="margin-top: 10rem; margin-bottom: 10rem;">
                        <h1>My Cart</h1>
                        <p>Your cart is currently empty.</p>
                        <p>Start adding items to your cart by browsing our products.</p>
                        <a href="/shop">Browse products</a>
          
                      </div>
                <%}else{%>
                <div class="col-12">
                    <div class="table-responsive">
                        <table class="table shopping-summery text-center clean">
                            <thead>
                                <tr class="main-heading">
                                    <th scope="col">No</th>
                                    <th scope="col">Image</th>
                                    <th scope="col">Name</th>
                                    <th scope="col">Price</th>
                                    <th scope="col">Quantity</th>
                                    <th scope="col">Subtotal</th>
                                    <th scope="col">Remove</th>
                                </tr>
                            </thead>
                            <tbody>
                                <%cartItems?.forEach(function(cartItems, index){%>
                                    <tr>
                                        <td>
                                            <%=index+1%>
                                        </td>
                                        <td class="image product-thumbnail"><img src="/uploads/<%=cartItems.carted.Image[0]%>" alt="#"></td>
                                        <td class="product-des product-name">
                                            <h5 class="product-name"><a href="shop-product-right.html"><%=cartItems.carted.Productname%></a></h5>
                                            
                                        </td>
                                        <td class="price" data-title="Price"><span>₹ <%=cartItems.carted.Price%></span></td>
                                        <td class="text-center" data-title="Stock">
                                            <div class="detail-qty border radius  m-auto">
                                                <div >  <button class="cart-item-count border border-success" onclick="changeQuantity('<%= cartItems._id%>','<%= cartItems.item %>','<%=users.userId%>' ,1,'<%=index%>')" id="<%=index%>button">+</button></div> 
                                                
                                                <span class="qty-val" id="<%= cartItems.item %>"><%=cartItems.quantity%></span>
                                                <div>  <button class="cart-item-count border border-success" onclick="changeQuantity('<%= cartItems._id%>','<%= cartItems.item %>','<%=users.userId%>',-1,'<%=index%>')"  >-</button></div> 
                                                
                                            </div>
                                        </td>
                                        <td class="text-right" data-title="Cart">
                                            <span id='<%=index%>'>₹ <%=subtotal[index].total%></span>
                                        </td>
                                        <td class="action" data-title="Remove"><button class="border border-success"  onclick="deleteProduct('<%=cartItems._id%>','<%=cartItems.item %>')"><i class="fi-rs-trash"></i></button></td>
                                    </tr>
                                    <%})%>
                                    
                                  
                                </tr>
                            </tbody>
                            
                        </table>
                        
                    </div>
                    
                   
                    <!-- <div class="divider center_icon mt-50 mb-50"><i class="fi-rs-fingerprint"></i></div> -->
                    <div class="row mb-50">
                        <div class="col-lg-6 col-md-12">
                            
                        
                        </div>
                        <div class="col-lg-6 col-md-12">
                            <div class="border p-md-4 p-30 border-radius cart-totals">
                                <div class="heading_s1 mb-3">
                                    <h4>Cart Totals</h4>
                                </div>
                                <div class="table-responsive">
                                    <table class="table">
                                        <tbody>
                                            <tr>
                                                <td class="cart_total_label">Cart Subtotal</td>
                                                <td class="cart_total_amount"><span class="font-lg fw-900 text-brand" id="totalValue">₹ <%=total%></span></td>
                                            </tr>
                                            <tr>
                                                <td class="cart_total_label">Shipping</td>
                                                <td class="cart_total_amount"> <i class="ti-gift mr-5"></i> Free Shipping</td>
                                            </tr>
                                            <tr>
                                                <td class="cart_total_label">Total</td>
                                                <td class="cart_total_amount"><strong><span class="font-xl fw-900 text-brand" id="subTotalValue">₹ <%=total%></span></strong></td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                                <a href="/checkOut" class="btn "> <i class="fi-rs-box-alt mr-10"></i> Proceed To CheckOut</a>
                            </div>
                        </div>
                    </div>
                </div>
                <%}%>
            </div>
        </div>
    </section>
</main>


<script>
   function changeQuantity(cartId, productId,userId, count,index) {
    
    const quantity = parseInt(document.getElementById(productId).textContent);
    console.log(cartId, productId,userId, count,index);
    if(quantity == 1 && count == -1)
       {
        deleteProduct(cartId,productId)
       }else{

    $.ajax({
        url: '/changeQuantity',
        data: {
            user:userId,
            cart: cartId,
            product: productId,
            count: count,
            quantity: quantity
        },
        method: 'post',
        success: (response) => {
            console.log(response,'reeeeeeeeee');
            console.log(response.subtotal[index]);
            let sub=document.getElementById(index).innerHTML=response.subtotal[index].total
            console.log(sub);
            if (response.status) {
                const updatedQuantity = quantity + count;
                document.getElementById(productId).textContent = updatedQuantity;
                document.getElementById('subTotalValue').textContent ='₹'+response.total;
                document.getElementById('totalValue').textContent ='₹'+ response.total;
                document.getElementById(index+'button').disabled=false

            
            }else{
                console.log(document.getElementById(index+'button'),']]');
                document.getElementById(index+'button').disabled=true
            }
        }
    });
}
}


function deleteProduct(cartId,proId){
    event.preventDefault()
     Swal.fire({
  title: 'Are you sure?',
  text: "You won't be able to revert this!",
  icon: 'warning',
  showCancelButton: true,
  confirmButtonColor: '#3085d6',
  cancelButtonColor: '#d33',
  confirmButtonText: 'Yes, delete it!',
  timer: 3000 
}).then((result)=>{
    if(result.isConfirmed){
        $.ajax({
            url:'/deleteCartProduct',
            data:{
                cartId:cartId,
                proId:proId
            },
            method:'DELETE',
            success:(response)=>{
                if(response.removeProduct){
                    location.reload()
                }
            }
        })
    }
})
return false
}

</script>