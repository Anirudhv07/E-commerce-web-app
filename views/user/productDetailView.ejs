<main class="main">
    <div class="page-header breadcrumb-wrap">
        <div class="container">
            <div class="breadcrumb">
                <a href="index.html" rel="nofollow">Home</a>
                <span></span>
                <%=response.Category %>
                    <span></span>
                    <%=response.Productname %>
            </div>
        </div>
    </div>
    <section class="mt-50 mb-50">
        <div class="container">
            <div class="row">
                <div>
                    <div class="product-detail accordion-detail">
                        <div class="row mb-50">
                            
                                    <div class="col-md-6 col-sm-12 col-xs-12">
                                    <div class="detail-gallery">
                                        <span class="zoom-icon"><i class="fi-rs-search"></i></span>
                                        <!-- MAIN SLIDES -->
                                        <div class="product-image-slider">
                                            <%response.Image.forEach(function(response){%>
                                                <%if(response!=0){%>
                                                <figure class="border-radius-10 ">
                                                    <img src="/uploads/<%=response%>" alt="product image">
                                                </figure>
                                            <%}%>
                                                <%})%>
                                           
                                        </div>
                                        <!-- THUMBNAILS -->
                                        <div class="slider-nav-thumbnails pl-15 pr-15">
                                            <%response.Image.forEach(function(response){%>
                                                <%if(response!=0){%>
                                                <div><img src="/uploads/<%=response %>" alt="product image"></div>
                                            <%}%>
                                               
                                                <%})%>
                                           
                                        </div>
                                    </div>
                                   
                                <!-- End Gallery -->
                                <div class="social-icons single-share">
                                    <ul class="text-grey-5 d-inline-block">
                                        <li><strong class="mr-10">Share this:</strong></li>
                                        <li class="social-facebook"><a href="https://www.facebook.com/" target="_blank"><img
                                                    src="assets/imgs/theme/icons/icon-facebook.svg" alt=""></a></li>
                                        <li class="social-twitter"> <a href="https://twitter.com/" target="_blank"><img
                                                    src="assets/imgs/theme/icons/icon-twitter.svg" alt=""></a></li>
                                        <li class="social-instagram"><a href="https://www.instagram.com/" target="_blank"><img
                                                    src="assets/imgs/theme/icons/icon-instagram.svg" alt=""></a></li>
                                        
                                    </ul>
                                </div>
                            </div>
                            <div class="col-md-6 col-sm-12 col-xs-12">
                                <div class="detail-info">
                                    <h2 class="title-detail">
                                        <%=response.Productname %>
                                    </h2>
                                    <div class="product-detail-rating">
                                        <div class="pro-details-brand">
                                            <span>Category: <a href="shop-grid-right.html">
                                                    <%=response.Category %>
                                                </a></span>
                                        </div>
                                        <div class="product-rate-cover text-end">
                                            <div class="product-rate d-inline-block">
                                                <div class="product-rating" style="width:90%">
                                                </div>
                                            </div>
                                            <span class="font-small ml-5 text-muted"> (25 reviews)</span>
                                        </div>
                                    </div>
                                    <div class="clearfix product-price-cover">
                                        <div class="product-price primary-color float-left">
                                            <ins><span class="text-brand">₹ <%=response.offerPrice %></span></ins>
                                            <ins><span class="old-price font-md ml-15">₹ <%=response.Price%>
                                                        </span></ins>
                                            <span class="save-price  font-md color3 ml-15">  <%=response.offerPercentage%> % off</span>
                                        </div>
                                    </div>
                                    <div class="bt-1 border-color-1 mt-15 mb-15"></div>
                                    <div class="short-desc mb-30">
                                        <p>
                                            <%=response.ProductDescription%>
                                        </p>
                                    </div>
                                    <div class="product_sort_info font-xs mb-30">
                                        <ul>
                                            <li class="mb-10"><i class="fi-rs-crown mr-5"></i> 1 Year AL Jazeera Brand
                                                Warranty</li>
                                            <li class="mb-10"><i class="fi-rs-refresh mr-5"></i> 30 Day Return Policy
                                            </li>
                                            <li><i class="fi-rs-credit-card mr-5"></i> Cash on Delivery available</li>
                                        </ul>
                                    </div>
                                   
                                   
                                    <div class="detail-extralink">
     
                                        <div class="product-extra-link2">
                                            <button type="submit"  onclick="addtocart('<%=response._id%>')" class="button button-add-to-cart">Add to cart</button>
                                            <a aria-label="Add To Wishlist" class="action-btn hover-up" onclick="addtoWishlist('<%=response._id%>'),Swal.fire({
                                                position: 'center',
                                                icon: 'success',
                                                title: 'Item Added Successfully To Wishlist',
                                                showConfirmButton: false,
                                                timer: 2000
                                              })"
                                                href="#"><i class="fi-rs-heart"></i></a>
                                           
                                        </div>
                                    </div>
                                    <ul class="product-meta font-xs color-grey mt-50">
                                        
                                        <li class="mb-5">Tags: <a href="#" rel="tag">Cloth</a>, <a href="#"
                                                rel="tag">Women</a>, <a href="#" rel="tag">Dress</a> </li>
                                        <li>Availability:<span class="in-stock text-success ml-5">
                                                <%=response.Quantity %> Items In Stock
                                            </span></li>
                                    </ul>
                                </div>
                                <!-- Detail Info -->
                            </div>
                        </div>

                       
                        
                    </div>
                </div>

            </div>
        </div>
    </section>
</main>


<script>
     //add to cart
     function addtocart(proId) {
        console.log(proId);
        $.ajax({
            url: `/addToCart/${proId}`,
            method: "GET",
            success: (response) => {
                console.log(response, 'reessss');
                if (response.status == false) {
                    Swal.fire({
                        position: 'center',
                        icon: 'success',
                        title: 'Item Added Successfully To Cart',
                        showConfirmButton: false,
                        timer: 2000
                    })


                } else if (response.status == true) {
                    Swal.fire({
                        position: 'center',
                        icon: 'success',
                        title: 'Item Added Successfully To Cart',
                        showConfirmButton: false,
                        timer: 2000
                    })
                    const count = $('#cartCount').html()
                    let num = parseInt(count)
                    console.log(typeof (num));
                    $('#cartCount').html(num + 1)

                } else if (response.err) {
                    Swal.fire({
                        position: 'center',
                        icon: 'error',
                        title: response.err,
                        showConfirmButton: false,
                        timer: 2000
                    })
                }

            }
        })
        // location.reload()

    }



    //add to wishlist
    function addtoWishlist(proId) {
        console.log(proId);
        $.ajax({
            url: `/addToWishlist/${proId}`,
            method: "GET",
            success: (response) => {
                if (response.status) {
                    const count = $('#wishlistCount').html()
                    let num = parseInt(count)
                    console.log(typeof (num));
                    $('#wishlistCount').html(num + 1)

                }

            }
        })
        // location.reload()

    }
</script>
