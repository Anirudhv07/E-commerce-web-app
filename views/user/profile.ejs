<section class="pt-150 pb-150">
    <div class="container">
        <div class="row">
            <div class=" m-auto">
                <div class="row">
                    <div class="col-md-4">
                        <div class="dashboard-menu">
                            <ul class="nav flex-column" role="tablist">
                                <li class="nav-item">
                                    <a class="nav-link active" id="dashboard-tab" data-bs-toggle="tab" href="#dashboard"
                                        role="tab" aria-controls="dashboard" aria-selected="false"><i
                                            class="fi-rs-settings-sliders mr-10"></i>Dashboard</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" id="orders-tab" data-bs-toggle="tab" href="#orders" role="tab"
                                        aria-controls="orders" aria-selected="false"><i
                                            class="fi-rs-shopping-bag mr-10"></i>Orders</a>
                                </li>
                               
                                <li class="nav-item">
                                    <a class="nav-link" id="address-tab" data-bs-toggle="tab" href="#address" role="tab"
                                        aria-controls="address" aria-selected="true"><i
                                            class="fi-rs-marker mr-10"></i>My Address</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" id="account-detail-tab" data-bs-toggle="tab"
                                        href="#account-detail" role="tab" aria-controls="account-detail"
                                        aria-selected="true"><i class="fi-rs-user mr-10"></i>Account details</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="/logOut"><i class="fi-rs-sign-out mr-10"></i>Logout</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-md-8">
                        <div class="tab-content dashboard-content">
                            <div class="tab-pane fade active show" id="dashboard" role="tabpanel"
                                aria-labelledby="dashboard-tab">
                                <div class="card">
                                    <div class="card-header">
                                        <h5 class="mb-0">Hello <%=users.username%> !!!</h5>
                                    </div>
                                    <div class="card-body">
                                        <p>From your account dashboard. you can easily check &amp; view your <a
                                                href="#">recent orders</a>, manage your <a href="#">shipping and billing
                                                addresses</a> and <a href="#">edit your password and account
                                                details.</a></p>
                                    </div>
                                </div>
                            </div>
                            <div class="tab-pane fade" id="orders" role="tabpanel" aria-labelledby="orders-tab">
                                <div class="card">
                                    <div class="card-header">
                                        <h5 class="mb-0">Your Orders</h5>
                                    </div>
                                    <div class="card-body">
                                        <div class="table-responsive">
                                            <table class="table">
                                                <thead>


                                                    <tr>
                                                        <th>Order</th>
                                                        <th>Product</th>
                                                        <th>Date</th>
                                                        <th>Status</th>
                                                        <th>Method</th>
                                                        <th>Total</th>
                                                        <th>Actions</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <% response.forEach(function(response){ %>
                                                        <tr>
                                                            <td>
                                                                <%= response.orders._id %>
                                                            </td>
                                                            <td>
                                                                <% response.orders.productDetails.forEach(function(product,index){
                                                                    %>
                                                                    <br>
                                                                    <%=index+1%>-<%= product.productsName %>
                                                                            <% }) %>
                                                            </td>
                                                            <td>
                                                                <%= response.orders.creditedAt.toLocaleString() %>
                                                            </td>
                                                            <td>
                                                                <%if(response.orders.orderConfirm=='ordered'){%>
                                                                    <span
                                                                        class="badge rounded-pill alert-primary">Ordered</span>
                                                            </td>
                                                            <%}else if(response.orders.orderConfirm=='cancelled' ){%>
                                                                <span
                                                                    class="badge rounded-pill alert-danger">Cancelled</span>
                                                                </td>
                                                                <%}else if(response.orders.orderConfirm=='orderPlaced'){%>
                                                                    <span
                                                                        class="badge rounded-pill alert-warning">Placed</span>
                                                                    </td>
                                                                    <%}else if(response.orders.orderConfirm=='orderDispatched'){%>
                                                                        <span
                                                                            class="badge rounded-pill alert-info">Dispatched</span>
                                                                        </td>
                                                                        <%}else if(response.orders.orderConfirm=='outForDelivery'){%>
                                                                            <span
                                                                                class="badge rounded-pill alert-info">Out
                                                                                for Delivery</span></td>
                                                                            <%}else if(response.orders.orderConfirm=='delivered'){%>
                                                                                <span
                                                                                    class="badge rounded-pill alert-success">Delivered</span>
                                                                                </td>
                                                                                <%}else{%>
                                                                                    <span
                                                                                        class="badge rounded-pill alert-danger">Returned</span>
                                                                                    </td>

                                                                                <%}%>
                                                                                    </td>
                                                                                    <td>
                                                                                        <%= response.orders.paymentMethod
                                                                                            %>
                                                                                    </td>

                                                                                    <td>
                                                                                        <%= response.orders.totalPrice
                                                                                            %>
                                                                                    </td>
                                                                                    <td><a href="/orderDetails/<%=response.orders._id%>"
                                                                                            class="btn btn-sm success d-block">
                                                                                            More Details</a></td>
                                                        </tr>
                                                        <% }) %>


                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="tab-pane fade" id="address" role="tabpanel" aria-labelledby="address-tab">
                                <div class="row">
                                    <%userAddress.forEach(function(userAddress,index){%>
                                    <div class="col-lg-6">
                                        <div class="card mb-3 mb-lg-0">
                                            <div class="card-header">
                                                <div class="row">

                                                <div class="col-lg-6">

                                                    <h5 class="mb-0"> Address <%=index+1%> </h5>
                                                </div>
                                                <div class="col-lg-6 text-end">
                                                    <a onclick="deleteAddress('<%=userAddress.Address._id%>')"><i class="fi-rs-trash mr-10 "></i></a>

                                                </div>
                                            </div>
                                            </div>
                                            <div class="card-body">
                                                <address><%=userAddress.Address.housename%>,<br> <%=userAddress.Address.street%>,
                                                    <br><%=userAddress.Address.city%>,<%=userAddress.Address.state%><br>Pin code:<%=userAddress.Address.pincode%><br>
                                                    <%=userAddress.Address.phone%>
                                                    <br><%=userAddress.Address. email%>
                                                
                                                </address>
                                                
                                                <a href="/editNewAddress/<%=userAddress.Address._id%>" class="btn-small">Edit</a>
                                            </div>
                                        </div>
                                    </div>
                               <% })%>
                                   
                                </div >
                                <div class=" text-center pt-3">
                                    <a href="/addNewAddress" class="btn btn-success">Add new Address</a>

                                </div>
                            </div>
                            <div class="tab-pane fade" id="account-detail" role="tabpanel"
                                aria-labelledby="account-detail-tab">
                                <div class="card">
                                    <div class="card-header">
                                        <h5>Account Details</h5>
                                    </div>
                                
                                        <form method="post" name="enq">
                                            <div class="row ">
                                                <div class="form-group col-md-6 ">
                                                    <label>Name</label>
                                                    <input required="" class="form-control square" name="name" value="<%=userDetails.username%>" disabled
                                                        type="text">
                                                </div>
                                                <div class="form-group col-md-6">
                                                    <label>E-mail</label>
                                                    <input required="" class="form-control square" name="name" value="<%=userDetails.email%>" disabled
                                                        type="text">
                                                </div>
                                                <div class="form-group col-md-12">
                                                    <label>Phone</label>
                                                    <input required="" class="form-control square" name="name" value="<%=userDetails.phonenumber%>" disabled
                                                        type="text">
                                                </div>
                                                <div class="text-center pb-3">
                                                    <a href="" class="btn btn-success ">Click here to change Password</a>
                                                </div>
                                                
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    function deleteAddress(addressId){
        event.preventDefault()
     Swal.fire({
  title: 'Are you sure?',
  text: "You won't be able to revert this!",
  icon: 'warning',
  showCancelButton: true,
  confirmButtonColor: '#3085d6',
  cancelButtonColor: '#d33',
  confirmButtonText: 'Yes, delete it!',
  timer: 3000 
}).then((result)=>{
    if(result.isConfirmed){
        $.ajax({
            url:'/deleteNewAddress',
            method:'delete',
            data:{
                addressId:addressId
            },
            success:(response)=>{
                if(response.deleteAddress)
            {
                location.reload()
            } 
                
            }
        })
    }
})
return false
    }
</script>