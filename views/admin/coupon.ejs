<script>
      $(document).ready( function () {
      $('#couponList').DataTable();
  } )
    function deleteCoupon(couponId){
        console.log(couponId,'kkkkkkkk')
        $.ajax({
            url:'/admin/deleteCoupon',
            method:'delete',
            data:{
                couponId:couponId
            },
            success:(response)=>{
                location.reload()
            }
        })
    }
</script>