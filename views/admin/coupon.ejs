<section class="content-main">
    <div class="content-header">
        <div>
            <h2 class="content-title card-title">User List</h2>

        </div>
        <div>

            <a href="/admin/generateCoupon" class="btn btn-primary btn-sm rounded">Create new</a>
        </div>

    </div>
    <div class="card mb-4 ">
        <div class="card-header">
            <div class="row align-items-center">
                <div class="table-responsive ">
                    <table class="table table-nowrap " id="couponList">
                        <thead>
                            <tr>
                                <th>No</th>
                                <th>COUPON CODE</th>
                                <th>DISCOUNT PERCENT</th>
                                <th>MAX DISCOUNT</th>
                                <th>EXPIRY</th>


                                <th class="text-end">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <%response.forEach(function(response,index){%>
                                <tr>
                                    <td>

                                        <%=index+1%>
                                    </td>
                                    <td>

                                        <%=response.couponName%>
                                    </td>
                                    <td>

                                        <%=response.discountPercentage%>
                                    </td>

                                    <td>

                                        <%=response.maxDiscountValue%>
                                    </td>

                                    <td>

                                        <%=response.expiry.toLocaleString()%>
                                    </td>

                                    <td class="text-end">

                                        <a onclick="deleteCoupon('<%=response._id%>')" class="btn btn-danger">Delete</a>
                                    </td>

                                </tr>

                                <%})%>

                        </tbody>

                    </table>
                </div>

            </div>
        </div>
        <!-- card-header end// -->
        <!-- card-body end// -->
    </div> <!-- card end// -->
   
</section> 

<script>

    //datatable
      $(document).ready( function () {
      $('#couponList').DataTable();
  } )

  //delete coupon
    function deleteCoupon(couponId){
        console.log(couponId,'kkkkkkkk')
        $.ajax({
            url:'/admin/deleteCoupon',
            method:'delete',
            data:{
                couponId:couponId
            },
            success:(response)=>{
                location.reload()
            }
        })
    }
</script>